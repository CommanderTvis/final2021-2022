	Если ВидФормы = "ФормаОбъекта"  Тогда
		Если Параметры.Ключ.Статус = Справочники.Статусы.Новый Тогда
			ВыбраннаяФорма = "Справочник.Клиенты.Форма.ФормаЭлемента";
